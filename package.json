    },
    "dependencies": {
        "@fullhuman/postcss-purgecss": "^4.0.3",
        "copyfiles": "^2.4.1",
        "html-minifier": "^4.0.0",
        "postcss": "^8.3.6",
        "postcss-cli": "^8.3.1",
        "rimraf": "^3.0.2",
        "sass": "^1.38.2"
    },
    "devDependencies": {
        "gh-pages": "^3.2.3"
    }
