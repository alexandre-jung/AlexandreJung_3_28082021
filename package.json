    "main": "index.js",
    "scripts": {
        "sass:run": "sass scss/main.scss static/css/main.css",
        "sass:watch": "npm run sass:run -- --watch",
        "sass:build": "npm run sass:run -- --style compressed",
        "postcss:purge": "postcss static/css/main.css -o static/css/main.css",
        "build": "npm run sass:build && npm run postcss:purge",
        "clean": "rimraf static/css/ build/",
        "copy": "copyfiles index.html \"menu/*\" \"static/**\" build/",
        "deploy": "npm run build && npm run copy && npm run html:minify && gh-pages -d build",
        "html:minify": "html-minifier --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-tag-whitespace --input-dir build/ --output-dir build/ --file-ext html"
    },
    "repository": {
        "type": "git",
